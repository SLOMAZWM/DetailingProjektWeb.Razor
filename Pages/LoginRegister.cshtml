@page "/LoginRegister"
@using WebProjektRazor.Models
@model WebProjektRazor.Pages.LoginRegisterModel


<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>

<div class="login-container">
    <div class="Login">
        <h1>Logowanie</h1>
        <form method="post" asp-page-handler="Login">
            <input asp-for="LoginUser.Email" type="text" placeholder="Email" />
            <input asp-for="LoginUser.Password" type="password" placeholder="Hasło" />
            <button type="submit">Zaloguj</button>
        </form>
    </div>

    <div class="Register">
        <h1>Rejestracja</h1>
        <form method="post" asp-page-handler="Register">
            <input asp-for="RegisterUser.FirstName" type="text" placeholder="Imię" />
            <input asp-for="RegisterUser.LastName" type="text" placeholder="Nazwisko" />
            <input asp-for="RegisterUser.PhoneNumber" type="text" placeholder="Telefon" />
            <input asp-for="RegisterUser.Email" type="text" placeholder="Email" />
            <input asp-for="RegisterUser.Password" type="password" placeholder="Hasło" />
            <button type="submit">Rejestruj</button>
        </form>
    </div>
</div>

